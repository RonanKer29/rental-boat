<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="text-center my-5">
        <h3>Log in</h3>
        <p class="lead">Please Log in to book a boat</p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: "" }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs mb-3">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control', placeholder: 'Email' },
                      wrapper_html: { class: 'form-group' },
                      label_html: { class: 'color-name-label' },
                      label: false %>
          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "current-password", class: 'form-control', placeholder: 'Password' },
                      wrapper_html: { class: 'form-group' },
                      label_html: { class: 'color-name-label' },
                      label: false %>
          <% if devise_mapping.rememberable? %>
            <%= f.input :remember_me, as: :boolean, inline_label: 'Remember me', wrapper_html: { class: 'form-check' }, input_html: { class: 'form-check-input' }, label_html: { class: 'form-check-label' } %>
          <% end %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-3" id="sign-up-btn">
        <p>Don't have an account yet ?</p>
        <%= link_to "Sign up here", "/users/sign_up", class: "btn btn-info" %>
      </div>
  </div>
</div>
