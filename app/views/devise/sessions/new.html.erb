<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="login-home text-center mt-5">
        <h3>Log in</h3>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-info" %>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-5' }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' },
                      wrapper_html: { class: 'form-group' } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: 'form-control' },
                      wrapper_html: { class: 'form-group' } %>
          <% if devise_mapping.rememberable? %>
            <%= f.input :remember_me, as: :boolean, inline_label: true, wrapper_html: { class: 'form-group' } %>
          <% end %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "btn btn-primary mb-1" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
