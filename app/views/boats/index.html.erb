<div class="container mt-3">


<div class="container mt-3">
  <div class="video-bck">
    <video autoplay muted loop class="myBackgroundVideo">
      <source src="<%= video_path("background.mp4")%>" type="video/mp4">
    </video>
      <% if user_signed_in? %>
        <h1>Welcome Aboard, <%= current_user.first_name %>!</h1>
      <% else %>
        <h1>Welcome Aboard, Guest!</h1>
      <% end %>
    <h2>Set Sail with Our <%= @boats.count %> Fantastic Boats.</h2>
</div>


  <div class="row">
    <% @boats.each do |boat| %>
        <%= link_to boat_path(boat), class: "col-md-4 mb-4 text-decoration-none" do %>
        <div class="card boat-card h-100 d-flex flex-column">
          <div class="boat-card-image rounded-top">
            <div id="<%= "boatCarousel-#{boat.id}"%>" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
            <% if boat.photos.attached? %>
            <% boat.photos.each do |photo| %>
              <div class="carousel-item active">
                <%= cl_image_tag(photo.key, height: 300, width: 550, crop: :fill, class: 'boat-img') %>
              </div>
            <% end %>
            <% else %>
              <div class="boat-img" style="background-image: url('https://source.unsplash.com/random/?boat')"></div>
            <% end %>
            </div>
              <button class="carousel-control-prev" type="button" data-bs-target="<%= "#boatCarousel-#{boat.id}"%>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="<%= "#boatCarousel-#{boat.id}"%>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
          <div class="card-body d-flex flex-column flex-grow-1 position-relative">
            <h5 class="card-title text-dark"><%= boat.name %></h5>
            <p class="card-text flex-grow-1 text-dark"><%= boat.description %></p>
            <div class="mt-auto d-flex justify-content-start align-items-center">
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-calendar-days"></i>
                <span class="text-dark ms-2"><%= boat.year_production %></span>
              </div>
              <div class="d-flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span class="text-dark ms-2"><%= boat.price_per_day %></span>
              </div>
              <div class="ms-auto review-stars">
                <i class="fas fa-star text-warning"></i> 4/5
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
