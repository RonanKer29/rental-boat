<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div class="container mt-3">
  <h1>Welcome(User) to our boat rental</h1>
  <h2>Browse our <%= Boat.count %> boats.</h2>

  <div class="row">
    <% @boats.each do |boat| %>
      <a href="/boats/<%= boat.id %>" class="col-md-4 mb-4 text-decoration-none">
        <div class="card boat-card h-100 d-flex flex-column rounded">
          <div class="boat-card-image rounded-top" style="background-image: url('https://images.pexels.com/photos/843633/pexels-photo-843633.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'); height: 200px; background-size: cover; background-position: center;"></div>
          <div class="card-body d-flex flex-column flex-grow-1 position-relative">
            <h5 class="card-title text-dark"><%= boat.name %></h5>
            <p class="card-text flex-grow-1 text-dark"><%= boat.description %></p>
            <div class="mt-auto d-flex justify-content-start align-items-center">
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-calendar-days"></i>
                <span class="text-dark ms-2"><%= boat.year_production %></span>
              </div>
              <div class="d-flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span class="text-dark ms-2"><%= boat.price_per_day %></span>
              </div>
              <div class="ms-auto review-stars">
                <i class="fas fa-star text-warning"></i> 4/5
              </div>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>



<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://images.pexels.com/photos/1821678/pexels-photo-1821678.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.pexels.com/photos/163236/luxury-yacht-boat-speed-water-163236.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.pexels.com/photos/843633/pexels-photo-843633.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


