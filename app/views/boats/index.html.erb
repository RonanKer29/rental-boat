<div class="container mt-3">
  <% if user_signed_in? %>
  <h1>Welcome Aboard, <%= current_user.first_name %>!</h1>
<% else %>
  <h1>Welcome Aboard, Guest!</h1>
<% end %>
  <h2>Set Sail with Our <%= Boat.count %> Fantastic Boats.</h2>

  <div class="row">
    <% @boats.each do |boat| %>
        <%= link_to boat_path(boat), class: "col-md-4 mb-4 text-decoration-none" do %>
        <div class="card boat-card h-100 d-flex flex-column">
          <div class="boat-card-image rounded-top">
            <div id="<%= "boatCarousel-#{boat.id}"%>" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="https://images.pexels.com/photos/1821678/pexels-photo-1821678.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="https://images.pexels.com/photos/163236/luxury-yacht-boat-speed-water-163236.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="https://images.pexels.com/photos/843633/pexels-photo-843633.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" class="d-block w-100" alt="...">
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="<%= "#boatCarousel-#{boat.id}"%>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="<%= "#boatCarousel-#{boat.id}"%>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
           </div>
          <div class="card-body d-flex flex-column flex-grow-1 position-relative">
            <h5 class="card-title text-dark"><%= boat.name %></h5>
            <p class="card-text flex-grow-1 text-dark"><%= boat.description %></p>
            <div class="mt-auto d-flex justify-content-start align-items-center">
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-calendar-days"></i>
                <span class="text-dark ms-2"><%= boat.year_production %></span>
              </div>
              <div class="d-flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span class="text-dark ms-2"><%= boat.price_per_day %></span>
              </div>
              <div class="ms-auto review-stars">
                <i class="fas fa-star text-warning"></i> 4/5
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
