<div class="boat-header" style="background-image:url('https://source.unsplash.com/random/?boat')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="boat-show-card">
        <h1><%= @boat.name %></h1>
        <p class="boat-show-description"><%= @boat.description %></p>
      </div>
      <div class="boat-show-card">
        <h3>Pictures of the boat</h3>
        <div id="<%= "boatCarousel-#{@boat.id}"%>" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% if @boat.photos.attached? %>
            <% @boat.photos.each do |photo| %>
              <div class="carousel-item active">
                <%= cl_image_tag(photo.key, height: 350, width: 650, crop: :fill) %>
              </div>
            <% end %>
            <% else %>
              <div class="boat-img" style="background-image: url('https://source.unsplash.com/random/?boat')"></div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="<%= "#boatCarousel-#{@boat.id}"%>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="<%= "#boatCarousel-#{@boat.id}"%>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="boat-show-card">
        <%= link_to "Book this boat !", new_boat_booking_path(@boat), class: "btn btn-primary" %>
      </div>
      <div class="boat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex ms-3">
            Price per day: <strong><%= @boat.price_per_day %> CHF</strong>
          </div>
          <div class="flex ms-3">
            Year production: <strong><%= @boat.year_production %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
